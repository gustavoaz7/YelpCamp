<% include partials/header %>
<div class="container">
    <div class="row">
      <h1 style="text-align:center;">Edit Comment</h1>
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <form action="/campgrounds/<%= campgroundID %>/comments/<%= comment._id %>?_method=PUT"  method="POST">
          <div class="form-group">
            <label>Comment</label>
            <textarea style="height: 100px;" class="form-control"type="text" name="updatedComment[text]"><%= comment.text %></textarea>
          </div>
          <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Back</a>
      </div>
    </div>
  </div>
</div>



