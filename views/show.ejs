<% include partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img src="<%= campground.image %>" class="img-responsive">
        <div class="caption-full">
          <h4 class="pull-right">$10/night</h4>
          <h4><a href="#"></a><%= campground.name %></h4>
          <p><%= campground.description %></p>
          <p><em>Submitted by: <%= campground.author.username %></em></p>
          <% if(loggedUser && campground.author.id.equals(loggedUser._id)) { %>
            <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
            <form id="deleteForm" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href='/campgrounds/<%= campground._id %>/comments/new'>New Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong> <span class="pull-right">7 days ago</span>
              <p><%= comment.text %></p>
            </div>
          </div>
          
        <% }) %>
      </div>
    </div>
  </div>
</div>






<% include partials/footer %>